                @Html.ValidationMessageFor(model => model.SecurityQuestionAnswer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PackageName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PackageName,
               new[]
               {
                   new SelectListItem {Text="Bronze Quarterly - R250p/m", Value = "Bronze Quarterly - R250p/m" },
