                   new SelectListItem {Text="Gold Half Yearly - R425p/m", Value = "Gold Half Yearly - R425p/m" },
                   new SelectListItem {Text="Gold Yearly - R400p/m", Value = "Gold Yearly - R400p/m" },
                   new SelectListItem {Text="Platinum Quartetly - R550p/m", Value = "Platinum Quartetly - R550p/m" },
                   new SelectListItem {Text="Platinum Half Yearly - R525p/m", Value = "Platinum Half Yearly - R525p/m" },
                   new SelectListItem {Text="Platinum Yearly - R500p/m", Value = "Platinum Yearly - R500p/m" },
               }, "---Choose a membership package option---"
               , new { htmlAttributes = new { @class = "form-control" } })
