@model MyGymApplication.Models.GymModels.TrackMyWeight

@{
    ViewBag.Title = "TrackMyWeight";
}

<h2>TrackMyWeight</h2>

@using (Html.BeginForm("AddMyWeight", "MyGym", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <h4>Add Entry</h4>

        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
            @Html.LabelFor(model => model.week, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.week, new { htmlAttributes = new { @class = "form-control", min = 1, max = 52 } }) @*, new { htmlAttributes = new { min= 1, max = 52 }*@ 
                @Html.ValidationMessageFor(model => model.week, "", new { @class = "text-danger" })
            </div>
        </div>
        <br/>

        <div class="form-group">
            @Html.LabelFor(model => model.weight, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.weight, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.weight, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br />

        @*<br /><input type="submit" value="CALCULATE" class="btn btn-default" /><br />*@
        <input id="btnAddEntry" type="submit" value="Add Entry" onclick="location.href='@Url.Action("AddMyWeight","MyGym")'" />

        <br />
}
<br /><br />
<div>
    @Html.ActionLink("View My Weight Chart", "MyWeightChart", "MyGym")
</div>
<br/><br/>
<div>
    @Html.ActionLink("Back to Menu", "MenuPage")
</div>
